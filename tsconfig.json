{
    "compilerOptions": {
        //可根据运行环境添加不同的lib
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        //兼容es5，如果对浏览器兼容要求不高，可以使用ES6
        "target": "ES5",
        //浏览器环境使用最新的es module语法
        "module": "ESNext",
        //添加编译时的警告
        "isolatedModules": true,
        "jsx": "react-jsx",
        //减少隐式any
        "noImplicitAny": true,
        //严格区分 import和import type
        "importsNotUsedAsValues": "error",
        "moduleResolution": "Node"
    },
    "extends": "./baseConfig.json",
    //因项目而已，配置别名
    "paths": []
}